datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  folders  Folder[]
}

model Session {
  // The primary key is "sid" as required by the session store when dbRecordIdIsSessionId is true.
  sid       String   @id @default(uuid())
  // Add an optional "id" field to absorb the extra value.
  id        String?  
  data      String
  expiresAt DateTime
}

model Folder {
  id     Int    @id @default(autoincrement())
  name   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
  files  File[]
}

model File {
  id         Int      @id @default(autoincrement())
  name       String
  size       Int
  uploadTime DateTime @default(now())
  filePath   String?
  fileUrl    String?
  folderId   Int
  folder     Folder   @relation(fields: [folderId], references: [id])
}



