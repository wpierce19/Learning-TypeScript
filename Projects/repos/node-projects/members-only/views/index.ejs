<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Main Page</title>
  <style>
    .nav-buttons {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }
    .nav-buttons a {
      padding: 10px 20px;
      text-decoration: none;
      background-color: #007BFF;
      color: white;
      border-radius: 5px;
    }
  </style>
</head>
<body>
  <!-- Navigation Buttons -->
  <div class="nav-buttons">
    <a href="/log-in">Log In</a>
    <a href="/members">Members</a>
    <a href="/newUser">Sign Up</a>
  </div>

  <% if (currentUser && currentUser.first_name && currentUser.last_name) { %>
    <p>Welcome, <%= currentUser.first_name %> <%= currentUser.last_name %>!</p>
  <% } %>

  <h1><%= title %></h1>
  <h2>Messages</h2>

  <% messages.forEach((message) => { %>
    <ul>
      <% if (currentUser.membership_status === 'active') { %>
        <li>User: <%= message.first_name %> <%= message.last_name %></li>
      <% } else { %>
        <li>User: Anonymous</li>
      <% } %>
      <li>Message: <%= message.body %></li>
      <% if (currentUser && currentUser.is_admin) { %>
        <!-- Admin delete button -->
        <form action="/deleteMessage/<%= message.id %>" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      <% } %>
    </ul>
  <% }) %>

  <a href="/newMessage">Compose New Message</a>
</body>
</html>



