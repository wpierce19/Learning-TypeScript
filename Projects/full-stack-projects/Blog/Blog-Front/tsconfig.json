{
  "extends": "../../../tsconfig.base.json",

  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "noEmit": true,

    /* JS â†’ TS learning */
    "allowJs": true,
    "checkJs": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Optional path alias */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": ["src", "**/*.js", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}