{
  "extends": "../../../tsconfig.base.json",

  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020"],

    "noEmit": true,

    /* JS â†’ TS learning */
    "allowJs": true,
    "checkJs": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },

  "include": ["**/*.js", "**/*.ts"],
  "exclude": ["node_modules", "dist"]
}